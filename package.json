{
  "name": "tslox",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.ts": [
        "prettier",
        "git add"
      ]
    }
  },
  "scripts": {
    "test": "exit 0",
    "start": "tsc && node build/index.js",
    "start:watch": "tsc -w & nodemon -w build build/index.js",
    "codegen:ast": "rm -f ./src/expr.ts && tsc && node build/src/generate-ast.js ./src/expr.ts"
  },
  "devDependencies": {
    "@types/node": "^10.14.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "typescript": "^3.4.2"
  }
}
